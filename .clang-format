BasedOnStyle: LLVM
IndentWidth: 2             # 2 spaces per indent level
TabWidth: 2
UseTab: Never              # Always spaces
NamespaceIndentation: All  # Indent inside namespaces
BreakBeforeBraces: Attach  # K&R style braces
ColumnLimit: 0             # No automatic line wrapping
AllowShortFunctionsOnASingleLine: Inline
DerivePointerAlignment: false
PointerAlignment: Left
SortIncludes: true         # Optional: sort #includes